<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/layout_01"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="나의 집"
            android:background="@drawable/btn_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:text="나는 자랑스러운 태극기 앞에"
            android:background="@drawable/btn_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:text="Republic of korea"
            android:background="@drawable/btn_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_02"
        app:layout_constraintTop_toBottomOf="@id/layout_01"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="나의 집"
            android:background="@drawable/btn_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <!--android:background="@drawable/img_btn_green_normal"-->
        <Button
            android:text="나는 자랑스러운 태극기 앞에"

            android:shadowColor="#eaff0015"
            android:shadowDx="20"
            android:shadowDy="20"
            android:shadowRadius="0.03"


            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:text="Republic of korea"
            android:background="@drawable/btn_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />

</android.support.constraint.ConstraintLayout>